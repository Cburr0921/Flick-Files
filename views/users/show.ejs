<%- include('../partials/header') %>

<main>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title h4 mb-3">Profile Info</h2>
            <p class="mb-2"><strong>Username:</strong> <%= profileUser.username %></p>
            <p class="mb-2"><strong>Member Since:</strong> <%= profileUser.createdAt ? new Date(profileUser.createdAt).toLocaleDateString() : 'N/A' %></p>
            <p class="mb-0"><strong>Reviews:</strong> <%= reviews.length %></p>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <h2 class="h4 mb-4">Reviews</h2>
        
        <% if (reviews.length === 0) { %>
          <div class="alert alert-info">
            No reviews yet.
            <% if (user && user._id.equals(profileUser._id)) { %>
              <a href="/movies" class="alert-link">Browse movies</a> to start reviewing!
            <% } %>
          </div>
        <% } else { %>
          <div class="reviews-list">
            <% reviews.forEach(review => { %>
              <div class="card mb-3">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <h3 class="h5 mb-1">
                        <a href="/movies/<%= review.movieId %>" class="text-decoration-none">
                          <%= review.movieTitle %>
                        </a>
                      </h3>
                      <div class="text-muted small">
                        Reviewed on <%= new Date(review.createdAt).toLocaleDateString() %>
                      </div>
                    </div>
                    <div class="rating-display">
                      <% for(let i = 1; i <= 5; i++) { %>
                        <span class="star <%= i <= review.rating ? 'filled' : '' %>">â˜…</span>
                      <% } %>
                    </div>
                  </div>

                  <% if (review.title) { %>
                    <h4 class="h6 mb-2"><%= review.title %></h4>
                  <% } %>

                  <p class="card-text"><%= review.review %></p>

                  <% if (user && user._id.equals(profileUser._id)) { %>
                    <div class="mt-3">
                      <form action="/movies/<%= review.movieId %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">Delete</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
