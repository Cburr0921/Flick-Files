<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Latest Reviews</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Sort by: <%= sort === 'rating' ? 'Highest Rated' : 'Most Recent' %>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item <%= !sort || sort === 'date' ? 'active' : '' %>" 
                       href="/reviews/all?sort=date">Most Recent</a>
                </li>
                <li>
                    <a class="dropdown-item <%= sort === 'rating' ? 'active' : '' %>" 
                       href="/reviews/all?sort=rating">Highest Rated</a>
                </li>
            </ul>
        </div>
    </div>

    <% if (reviews.length === 0) { %>
        <div class="alert alert-info">
            No reviews yet. 
            <% if (user) { %>
                <a href="/movies" class="alert-link">Browse movies</a> to write the first review!
            <% } else { %>
                <a href="/auth/sign-in" class="alert-link">Sign in</a> to write the first review!
            <% } %>
        </div>
    <% } else { %>
        <div class="row">
            <% reviews.forEach(review => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="h5 mb-3">
                                <a href="/movies/<%= review.movieId %>" class="text-decoration-none">
                                    <%= review.movieTitle %>
                                </a>
                            </h2>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="rating">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %> text-warning"
                                           role="img"
                                           aria-label="<%= i <= review.rating ? 'Filled star' : 'Empty star' %>"></i>
                                    <% } %>
                                    <span class="visually-hidden">Rating: <%= review.rating %> out of 5 stars</span>
                                </div>
                                <% if (review.recommend) { %>
                                    <span class="badge bg-success">
                                        <i class="bi bi-hand-thumbs-up-fill"></i> Recommended
                                    </span>
                                <% } %>
                            </div>

                            <% if (review.title) { %>
                                <h3 class="h6 mb-2"><%= review.title %></h3>
                            <% } %>

                            <p class="card-text">
                                <%= review.review.length > 150 ? review.review.substring(0, 150) + '...' : review.review %>
                            </p>

                            <div class="mt-3">
                                <div class="text-muted small mb-2">
                                    By <a href="/users/<%= review.user._id %>" class="text-decoration-none">
                                        <%= review.user.username %>
                                    </a>
                                    on <%= new Date(review.createdAt).toLocaleDateString() %>
                                </div>
                                <a href="/reviews/<%= review._id %>" class="btn btn-outline-primary btn-sm">Read full review</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <% if (totalPages > 1) { %>
            <nav aria-label="Review pages" class="mt-4">
                <ul class="pagination justify-content-center">
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= page === i ? 'active' : '' %>">
                            <a class="page-link" href="/reviews/all?page=<%= i %>&sort=<%= sort %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } %>
</div>

<%- include('../partials/footer') %>
