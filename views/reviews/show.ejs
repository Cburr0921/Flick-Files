<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3">
                        <a href="/movies/<%= review.movieId %>" class="text-decoration-none">
                            <%= review.movieTitle %>
                        </a>
                    </h1>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="rating">
                            <% for(let i = 1; i <= 5; i++) { %>
                                <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %> text-warning"
                                   role="img"
                                   aria-label="<%= i <= review.rating ? 'Filled star' : 'Empty star' %>"></i>
                            <% } %>
                            <span class="visually-hidden">Rating: <%= review.rating %> out of 5 stars</span>
                        </div>
                        <% if (review.recommend) { %>
                            <span class="badge bg-success">
                                <i class="bi bi-hand-thumbs-up-fill"></i> Recommended
                            </span>
                        <% } %>
                    </div>

                    <% if (review.title) { %>
                        <h2 class="h5 mb-3"><%= review.title %></h2>
                    <% } %>

                    <% if (review.spoilerAlert) { %>
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle-fill"></i> Contains spoilers
                        </div>
                    <% } %>

                    <p class="mb-4"><%= review.review %></p>

                    <div class="text-muted small mb-4">
                        <div>By <a href="/users/<%= review.user._id %>" class="text-decoration-none"><%= review.user.username %></a></div>
                        <div>Reviewed on <%= new Date(review.createdAt).toLocaleDateString() %></div>
                        <% if (review.watchedAt) { %>
                            <div>Watched on <%= new Date(review.watchedAt).toLocaleDateString() %></div>
                        <% } %>
                    </div>

                    <div class="d-flex gap-2 mb-4">
                        <% if (user) { %>
                            <a href="#" class="btn btn-outline-primary btn-sm like-button" data-review-id="<%= review._id %>"
                                    data-liked="<%= review.likes.includes(user._id) %>">
                                <i class="bi <%= review.likes.includes(user._id) ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                                <span class="like-count"><%= review.likes.length %></span> likes
                            </a>
                        <% } else { %>
                            <span class="text-muted">
                                <i class="bi bi-heart"></i> <%= review.likes.length %> likes
                            </span>
                        <% } %>

                        <% if (user && user._id.equals(review.user._id)) { %>
                            <a href="/reviews/<%= review._id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
                            <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        <% } %>
                    </div>

                    <!-- Comments Section -->
                    <div class="comments-section">
                        <h3 class="h5 mb-3">Comments</h3>
                        
                        <% if (user) { %>
                            <form class="comment-form mb-4" data-review-id="<%= review._id %>">
                                <div class="mb-3">
                                    <textarea class="form-control" name="content" rows="2" placeholder="Write a comment..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">Post Comment</button>
                            </form>
                        <% } else { %>
                            <div class="alert alert-info">
                                <a href="/auth/sign-in" class="alert-link">Sign in</a> to leave a comment.
                            </div>
                        <% } %>

                        <div class="comments-list">
                            <% review.comments.forEach(comment => { %>
                                <div class="comment mb-3" id="comment-<%= comment._id %>">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <a href="/users/<%= comment.user._id %>" class="fw-bold text-decoration-none">
                                                <%= comment.user.username %>
                                            </a>
                                            <small class="text-muted ms-2">
                                                <%= new Date(comment.createdAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <% if (user && (user._id.equals(comment.user._id) || user._id.equals(review.user._id))) { %>
                                            <button class="btn btn-link btn-sm text-danger p-0 delete-comment"
                                                    data-review-id="<%= review._id %>"
                                                    data-comment-id="<%= comment._id %>">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                    <div class="mt-1"><%= comment.content %></div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include interactions.js -->
<script src="/javascripts/interactions.js"></script>

<%- include('../partials/footer') %>
