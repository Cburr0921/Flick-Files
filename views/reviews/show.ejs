<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="h3 mb-2">
                                Review for <a href="/movies/<%= review.movieId %>" class="text-decoration-none">
                                    <%= review.movieTitle %>
                                </a>
                            </h1>
                            <div class="text-muted">
                                by <a href="/users/<%= review.user._id %>" class="text-decoration-none">
                                    <%= review.user.username %>
                                </a>
                            </div>
                        </div>
                        <div class="rating">
                            <% for(let i = 1; i <= 5; i++) { %>
                                <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %> text-warning"
                                   role="img"
                                   aria-label="<%= i <= review.rating ? 'Filled star' : 'Empty star' %>"></i>
                            <% } %>
                            <span class="visually-hidden">Rating: <%= review.rating %> out of 5 stars</span>
                        </div>
                    </div>

                    <% if (review.title) { %>
                        <h2 class="h5 mb-3"><%= review.title %></h2>
                    <% } %>

                    <% if (review.spoilerAlert) { %>
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            This review contains spoilers!
                        </div>
                    <% } %>

                    <p class="card-text mb-4"><%= review.review %></p>

                    <div class="d-flex justify-content-between align-items-center text-muted small mb-3">
                        <div>
                            <div>Reviewed on <%= new Date(review.createdAt).toLocaleDateString() %></div>
                            <% if (review.watchedAt) { %>
                                <div>Watched on <%= new Date(review.watchedAt).toLocaleDateString() %></div>
                            <% } %>
                        </div>
                        <div>
                            <% if (review.recommend) { %>
                                <span class="text-success">
                                    <i class="bi bi-hand-thumbs-up-fill me-1"></i>
                                    Recommends this movie
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <% if (user && user._id.toString() === review.user._id.toString()) { %>
                        <div class="d-flex gap-2">
                            <a href="/reviews/<%= review._id %>/edit" class="btn btn-primary">Edit Review</a>
                            <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Are you sure you want to delete this review?')">
                                    Delete Review
                                </button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="mt-3">
                <a href="/movies/<%= review.movieId %>" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Movie
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
