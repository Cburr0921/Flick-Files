<%- include('../partials/header') %>

<div class="container mt-4">
    <h1>My Reviews</h1>

    <% if (reviews.length === 0) { %>
        <div class="alert alert-info">
            You haven't written any reviews yet. 
            <a href="/movies" class="alert-link">Browse movies</a> to start reviewing!
        </div>
    <% } else { %>
        <div class="row">
            <% reviews.forEach(review => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title h5">
                                <a href="/movies/<%= review.movieId %>" class="text-decoration-none">
                                    <%= review.movieTitle %>
                                </a>
                            </h2>
                            
                            <div class="mb-2">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %> text-warning" 
                                       role="img" 
                                       aria-label="<%= i <= review.rating ? 'Filled star' : 'Empty star' %>"></i>
                                <% } %>
                                <span class="visually-hidden">Rating: <%= review.rating %> out of 5 stars</span>
                            </div>

                            <% if (review.title) { %>
                                <h3 class="h6 mb-2"><%= review.title %></h3>
                            <% } %>

                            <p class="card-text"><%= review.review %></p>

                            <div class="text-muted small mb-3">
                                <div>Reviewed on <%= new Date(review.createdAt).toLocaleDateString() %></div>
                                <% if (review.watchedAt) { %>
                                    <div>Watched on <%= new Date(review.watchedAt).toLocaleDateString() %></div>
                                <% } %>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="/reviews/<%= review._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <a href="#" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?') && this.closest('form').submit();">Delete</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
